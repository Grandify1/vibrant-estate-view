modules = ["nodejs-20"]

[deployment]
build = ["sh", "-c", "npm run build"]
run = ["sh", "-c", "node server.js"]
deploymentTarget = "gce"

# Ensure widget.js is accessible at root
[[deployment.rewrites]]
from = "/widget.js"
to = "/widget.js"

# SPA fallback for all other routes
[[deployment.rewrites]]
from = "/*"
to = "/index.html"

[workflows]
runButton = "Build and Serve"

[[workflows.workflow]]
name = "Build and Serve"
author = 43169530
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run build"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx serve dist -s -p 8080 --host 0.0.0.0"

[[workflows.workflow]]
name = "Express Server"
author = 43169530
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run build"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node server.js"

[nix]
channel = "stable-24_05"
packages = ["supabase-cli"]

[[ports]]
localPort = 8080
externalPort = 80
