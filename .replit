
[deployment]
build = ["npm", "run", "build"]
run = ["npx", "serve", "dist", "-s", "-l", "8080"]
deploymentTarget = "static"
publicDir = "dist"

# Ensure widget.js is accessible at root
[[deployment.rewrites]]
from = "/widget.js"
to = "/widget.js"

# SPA fallback for all other routes
[[deployment.rewrites]]
from = "/*"
to = "/index.html"
